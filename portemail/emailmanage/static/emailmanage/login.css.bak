.loginForm
{    
    width:380px;
    height:400px;
    margin-left:700px;
    border:solid 3px #DDDDDC;
    border-radius: 2%;
  
}

.radio input{
width:40px;
border:#ff0000 1px solid;
}


.checkbox input{
width:100px;
border:#FDFDDC 1px solid;
border-radius: 2%;
}

label{  
    display: inline-block;  
    padding: 0 1px;  
    vertical-align: middle; 
    margin-bottom:15px; 
    width:100px;
}  
input{  
    outline: none;  
    border: 1px solid rgb(216, 216, 216);  
    padding: 2px 10px 2px 10px; 
    margin-bottom:15px; 
}  
input[type="text"]{  
    height: 40px;  
    width: 250px;  
    line-height: 14px;  
    border-radius: 5px;  
    padding:10px 10px;  
    vertical-align: middle;  
    color:#666;  
}

input[type="email"]{  
    height: 40px;  
    width: 250px;  
    line-height: 14px;  
    border-radius: 5px;  
    padding:10px 10px;  
    vertical-align: middle;  
    color:#666;  
}

input[type="password"]{  
    height: 40px; 
    width: 250px;    
    line-height: 14px;  
    border-radius: 5px;  
    padding:10px 10px;  
    vertical-align: middle;  
    color:#666;  
}   
input[type="button"]{  
    padding: 0px 10px;  
    height:50px;  
    width:100px; 
    font-size:1.5em; 
    margin-right:20px;
    margin-top:20px;
} 

input[type="submit"]{  
    padding: 0px 10px;  
    height:50px;  
    width:100px; 
    background-color:green;
    color:#fff;
    font-size:1.5em; 
    margin-right:20px;
    margin-top:20px;
} 